				text style "normal"
        text shadow 1
			}
			label
			{
        enabled "a7cheatCreateItem == rowNumber"
				area 0 0 -1 -1
				text lua "a7itemList[rowNumber][1]"
				text style "normal"
        text shadow 1
        text color S
			}
		}
		column
		{
			width 75
			label
			{
				area 0 0 -1 -1
				text lua "a7itemList[rowNumber][2]"
				text style "normal"
        text shadow 1
			}
