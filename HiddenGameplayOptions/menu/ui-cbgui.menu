    hideHighlight
		rowheight	18
		table		"a7itemList"
		var		a7cheatCreateItem
		scrollbar	'GUISCRC'
	}
	button
	{
    enabled "a7cheatListType == 1"
		area		122 252 140 30
		bam			GUIWPKPC
    ScaleToClip
		sequence	1
		text		"A7_CREATE_BUTTON"
